<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="conatiner-fluid">
        <div class="row d-flex justify-content-center">
  
            <div class="col-12 d-flex justify-content-center">
                <div class="m-4">
                    <h3> List of Homeworks</h3>
                </div>
            </div>
        
            <div class="col-12 d-flex justify-content-center m-4">
                <div class="listHomework">

                    <% if (locals.foundItems) { %>
                        <%foundItems.forEach((fruit)=> { %>

                            <form action="/delete" method="post">
                                <div class="check form-check m-2" >
                                    <input class="form-check-input" type="checkbox" name="checkHome" value="<%=fruit._id%>" id="flexCheckChecked" onchange="this.form.submit()">
                                    <label class="form-check-label" for="flexCheckChecked">
                                        <%=fruit.name %>
                                    </label>
                                        
                                </div>
                            </form>
                                
                             
                              <%}) %>
                      
                    <% } else { %>
                        <div></div>
                        <%  } %>


                    
                </div>
            </div>     

            <div class="col-12 d-flex justify-content-center ">
                <form action="/submit" method="post" >
                    <div class="input-group mb-3" style="width:300px;">
                        <input type="text" class="form-control" placeholder="Type of homework" aria-label="Type of homework" id="homeWork" aria-describedby="basic-addon1"name='homework' >
                        <button type="submit" style="color: white; background-color: #1e213a;"  class="btn btn"> Send</button>
                    </div>    
                </form>
                    
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <script>


  </script>
</body>
</html>
